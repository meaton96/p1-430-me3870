{
    "extends": "airbnb/base",
    "plugins": [
        "@stylistic/js"
    ],
    "rules": {
        "indent": ["error", 4],
        "@stylistic/js/indent": ["error", 4],
        "no-underscore-dangle": "off",
        "no-plusplus": "off",
        "import/extensions": "off"
    },
    "parserOptions": {
        "ecmaVersion": 2020,  
        "sourceType": "module"
    }
}
